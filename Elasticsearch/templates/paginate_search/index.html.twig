    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    {% if pagination.start > 1 %}
      <a href="{{ path("paginate_search") }}/{{ pagination.startTotal  }}">{{ pagination.startTotal }}</a>...
    {% endif %}

    <a href="{{ path("paginate_search") }}/{{ pagination.start  }}">{{ pagination.start }}</a>
